<%= render partial: "layouts/errors", object: @task %>

<%= form_for [@list, @task] do |f| %>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description,
                      class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :list %>
    <%= select_tag :list,
                    options_for_select(@select_options),
                    class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-warning btn-block" %>
<% end %>
