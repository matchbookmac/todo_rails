<%= render partial: "layouts/errors", object: @task %>

<%= form_for [@list, @task] do |f| %>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description,
                      class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :list_id %>
    <%= f.collection_select :list_id, @lists, :id, :name, {}, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-warning btn-block" %>
<% end %>
